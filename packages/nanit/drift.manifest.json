{
  "$schema": "https://registry.drift.dev/manifest/v1.json",
  "name": "nanit",
  "version": "0.2.0",
  "displayName": "Nanit",
  "description": "Live baby camera stream from Nanit â€” widget cards with auto-detaching PiP player",

  "graphql": {
    "schema": "schema.graphql",
    "resolvers": "resolvers.ts"
  },

  "canvases": {
    "nav-sidebar": {
      "component": "components/NavSection.tsx",
      "label": "Nanit",
      "icon": "baby",
      "priority": 80
    },
    "drawer": {
      "component": "components/Drawer.tsx",
      "label": "Nanit Camera",
      "icon": "baby"
    },
    "entity-widget": {
      "component": "components/CamWidget.tsx",
      "entityType": "nanit_cam"
    },
    "floating-widget": {
      "component": "components/CamFloatingWidget.tsx",
      "entityType": "nanit_cam",
      "autoDetach": true
    },
    "entity-drawer": {
      "component": "components/CamEntityDrawer.tsx",
      "entityType": "nanit_cam"
    },
    "feed-card": {
      "component": "components/NanitFeedCard.tsx",
      "entityType": "nanit_cam",
      "defaultSize": "medium"
    }
  }
}
